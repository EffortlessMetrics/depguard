{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DepguardConfigV1",
  "description": "`depguard.toml` schema v1.\n\nThis is a *user-facing* config model: it is intentionally permissive so forward-compat is easy.",
  "type": "object",
  "properties": {
    "checks": {
      "description": "Map of check_id -> config.",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/CheckConfig"
      },
      "default": {}
    },
    "fail_on": {
      "description": "When to fail the check: `error` (default) or `warn`.",
      "type": [
        "string",
        "null"
      ]
    },
    "max_findings": {
      "description": "How many findings to emit before truncating the list.",
      "type": [
        "integer",
        "null"
      ],
      "format": "uint32",
      "minimum": 0
    },
    "profile": {
      "type": [
        "string",
        "null"
      ]
    },
    "schema": {
      "description": "Optional schema string for tooling (`depguard.config.v1`).",
      "type": [
        "string",
        "null"
      ]
    },
    "scope": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "$defs": {
    "CheckConfig": {
      "type": "object",
      "properties": {
        "allow": {
          "description": "Generic allowlist patterns (semantics are check-specific).",
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          }
        },
        "enabled": {
          "description": "Override preset enable/disable.",
          "type": [
            "boolean",
            "null"
          ]
        },
        "ignore_publish_false": {
          "description": "deps.path_requires_version: ignore publish = false and still enforce.",
          "type": [
            "boolean",
            "null"
          ]
        },
        "severity": {
          "description": "Override preset severity: `info`, `warning`, `error`.",
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
