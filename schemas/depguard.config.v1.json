{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DepguardConfigV1",
  "description": "`depguard.toml` schema v1.\n\nThis is a *user-facing* config model: it is intentionally permissive so forward-compat is easy.",
  "type": "object",
  "properties": {
    "checks": {
      "description": "Map of check_id -> config.",
      "default": {},
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/CheckConfig"
      }
    },
    "max_findings": {
      "description": "How many findings to emit before truncating the list.",
      "type": [
        "integer",
        "null"
      ],
      "format": "uint32",
      "minimum": 0.0
    },
    "profile": {
      "type": [
        "string",
        "null"
      ]
    },
    "schema": {
      "description": "Optional schema string for tooling (`depguard.config.v1`).",
      "type": [
        "string",
        "null"
      ]
    },
    "scope": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "definitions": {
    "CheckConfig": {
      "type": "object",
      "properties": {
        "allow": {
          "description": "Generic allowlist patterns (semantics are check-specific).",
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "enabled": {
          "description": "Override preset enable/disable.",
          "type": [
            "boolean",
            "null"
          ]
        },
        "severity": {
          "description": "Override preset severity: `info`, `warning`, `error`.",
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
